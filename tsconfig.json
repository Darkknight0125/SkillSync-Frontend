{
  "compilerOptions": {
    "resolveJsonModule": true,       // Allows importing JSON files in TypeScript
    "esModuleInterop": true,         // Ensures compatibility for default imports
    "allowJs": true,                 // Allows JS files (like JSX) in the project
    "jsx": "react-jsx",              // Enables JSX support with React
    "strict": true,                  // Optional: Enables strict type checking in TypeScript
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"  // Include all files in the 'src' directory
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
}
